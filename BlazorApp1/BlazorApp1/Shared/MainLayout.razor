@inherits LayoutComponentBase
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<PageTitle>BlazorApp1</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
            <a class="oi oi-person" href="/user" target="_blank"></a>
            <a class="oi oi-account-logout" @onclick="handleLogout" href="/" target="_blank"></a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<style>
@@import url('https://fonts.googleapis.com/css2?family=Righteous');
    body {
        margin: 0;
        font-family: 'Righteous';
        color: #4d4d4d;
    }
        
</style>

@code{

    public void handleLogout(){
        Configuration["loggeduser.name"] = "";
        Configuration["loggeduser.username"] = "";
        Console.WriteLine(Configuration["loggeduser.name"]);
    }
}